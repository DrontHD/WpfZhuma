<Page x:Class="WpfApp.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница пользователя">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Label x:Name="Greeting"></Label>
            <Button x:Name="StoreButton" Content="Перейти в магазин"
                    Click="StoreButton_Click"   ></Button>
            <Button x:Name="CartButton" Content="Корзина"
                    Click="CartButton_Click"   ></Button>
            <Button x:Name="GoBackButton" Content="Вернутся назад" 
                    Click="GoBackButton_Click" ></Button>
        </StackPanel>
    </Grid>
</Page>
